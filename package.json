{
  "name": "smart-education-platform",
  "version": "1.0.0",
  "description": "Smart Education Platform with RAG System",
  "main": "dist/index.js",
  "scripts": {
    "install:fix": "npm install --legacy-peer-deps",
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    
    "// Database Scripts": "",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seeds/seed-curriculum.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    
    "// Test Scripts": "",
    "test": "tsx src/test-integration.ts",
    "test:integration": "tsx src/test-integration.ts",
    "test:rag": "tsx src/test-rag.ts",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    
    "// Development Scripts": "",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    
    "// Setup Scripts": "",
    "setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "setup:fresh": "npm run db:reset && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "education",
    "rag",
    "ai",
    "typescript",
    "prisma",
    "express"
  ],
  "author": "Smart Education Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.36.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@langchain/community": "^0.3.56",
    "@langchain/openai": "^0.6.13",
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.7",
    "canvas": "^3.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.34",
    "mammoth": "^1.11.0",
    "marked": "^16.3.0",
    "morgan": "^1.10.1",
    "openai": "^5.22.0",
    "pdf-parse": "^1.1.1",
    "prisma": "^6.16.2",
    "puppeteer": "^24.22.0",
    "redis": "^5.8.2",
    "sanitize-html": "^2.17.0",
    "tiktoken": "^1.0.22",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  }
}